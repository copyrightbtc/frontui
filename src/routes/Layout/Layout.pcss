.layout {
  background: var(--main-dark); 
  min-height: calc(100vh);
  padding-left: 0;
  padding-right: 0;
  padding-top: 0;

  &--mobile {
    max-width: 100vw;
    min-height: auto;
    min-width: 100vw;
    padding-bottom: 0px;
    padding-top: 0;
    width: 100vw;
    background: transparent;
  }
}
.trading-layout {
  background: var(--main-dark);
}
.mobile-version{
  background: var(--color-main-dark);
  min-height: 100vh;
}
