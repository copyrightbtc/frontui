.delete-payment-modal{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  &__row{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 7px;
    &:last-child{
      margin: none;
    }
    p{
      color: var(--color-light-grey);
    }
    span{
      color: var(--color-dark);
      font-size: 15px;
    }
  }
}