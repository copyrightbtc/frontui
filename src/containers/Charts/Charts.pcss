.charts-screen {
  align-items: flex-start;
  display: flex;
  height: 100%;
  justify-content: flex-start;
  width: 100%;
  &__both{
    height: 100%;
    display: flex;
    flex-direction: column;
    .trading-chart{
      max-width: 100%;
      flex: 1 0 70%;
      height: 100%;
    }
    .market-depths{
      max-width: 100%;
      flex: 1 0 30%;
      height: 100%;
    }
  }
}
